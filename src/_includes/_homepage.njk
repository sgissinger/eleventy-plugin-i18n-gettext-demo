<div class="jumbotron">
  <h1>{{ _('Fruits') }}{% if eatSnails %} üêå{% endif %}</h1>
</div>

{%- for fruit in fruits -%}
<div class="card">
  <div class="card-body">
    <a href="{{ _p(fruit.path) | url }}">
      <h4 class="card-title">{{ _(fruit.name) }}</h4>
    </a>
    <div class="card-text">
      <div class="row">
        <div class="col-5"><b>Template content</b></div>
        <div class="col-7">{{ _('Click on the fruit to see more details.') }}</div>
      </div>
      <div class="row">
        <div class="col-5"><b>Template content with text replacment</b></div>
        <div class="col-7">{{ _('The %s keeps the doctor away.', _(fruit.name) | lower) }}</div>
      </div>
      <div class="row">
        <div class="col-5"><b>Template content pluralized</b></div>
        <div class="col-7">{{ _n('This fruit is excellent.', 'These fruits are excellent.', fruit.count) }}</div>
      </div>
      <div class="row">
        <div class="col-5"><b>Data content</b></div>
        <div class="col-7">{{ _(fruit.color + ' ' + fruit.name | lower) }}</div>
      </div>
      <div class="row">
        <div class="col-5"><b>Data content pluralized with text replacment</b></div>
        {%- set fruity = _n(fruit.color + ' ' + fruit.name | lower, fruit.color + ' ' + fruit.plural | lower, fruit.count) -%}
        <div class="col-7">{{ _('We currently have %d %s in stock.', fruit.count, fruity | lower) }}</div>
      </div>
    </div>
  </div>
</div>
{%- endfor -%}

<div class="jumbotron">
  <h1>{{ _('Dates and times') }}</h1>  
</div>

<div class="card">
  <div class="card-body">
    <a target="_blank" href="https://momentjs.com/docs/#/displaying/format">
      <h4 class="card-title">{{ _('Moment.js localized formats') }}</h4>
    </a>
    <div class="card-text">
      {%- for moment in moments -%}
        <div class="row">
          <div class="col-1"><b>{{ moment.format }}</b></div>
          <div class="col-11">{{ _d(moment.format, page.date) }}</div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>